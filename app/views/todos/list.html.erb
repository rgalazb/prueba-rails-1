<h1>lista de To Do</h1>


<div class="row">
  <div class="col-md-6">
    <h3>No Completados</h3>
    <% @sin_terminar.each do |todo| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <p class="card-text"><%= todo.description %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <h3>Completados</h3>
    <%  @terminados.each do |todo| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <p class="card-text"><%= todo.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
